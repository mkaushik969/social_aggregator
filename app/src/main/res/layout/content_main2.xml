<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.googlelogin.manas.googlelogin.Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:id="@+id/sa_cv">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sa_et"
            android:lines="4"
            android:background="@color/white"
            android:hint="What's on your mind..."
            android:padding="5dp"
            android:gravity="top"/>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/white"
        android:layout_below="@+id/sa_cv"
        android:layout_marginTop="20dp"
        android:id="@+id/m2a_sharebtn"
        android:text="Share Everywhere"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/la_round_tv"
        android:layout_below="@+id/m2a_sharebtn"
        android:layout_above="@+id/sa_rl"
        android:background="@drawable/line_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m2a_sharebtn"
        android:id="@+id/la_round_tv"
        android:text="OR"
        android:textColor="@color/grey"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/la_round_tv"
        android:layout_below="@+id/m2a_sharebtn"
        android:layout_above="@+id/sa_rl"
        android:background="@drawable/line_background"
        android:id="@+id/textView" />

    <ScrollView
        android:layout_below="@+id/la_round_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sa_rl">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="GOOGLE+ SHARE"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@color/google_color"
            android:id="@+id/sign_in_button"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_google"
            android:visibility="gone"
            android:src="@drawable/ic_done_black_24dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:background="@color/com_facebook_blue"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_below="@+id/sign_in_button"
            android:text="FACEBOOK SHARE"
            android:id="@+id/fb_btn"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sign_in_button"
            android:id="@+id/iv_fb"
            android:visibility="gone"
            android:src="@drawable/ic_done_black_24dp"/>

        <Button
            android:id="@+id/twitter_login_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/fb_btn"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:text="Twitter Share"
            android:textColor="@color/white"
            android:background="@color/twitter_color"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/fb_btn"
            android:id="@+id/iv_twitter"
            android:visibility="gone"
            android:src="@drawable/ic_done_black_24dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="LinkedIn Share"
            android:layout_below="@+id/twitter_login_button"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:background="@color/linkedin_color"
            android:textColor="@color/white"
            android:id="@+id/li_btn"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/twitter_login_button"
            android:id="@+id/iv_linkedin"
            android:visibility="gone"
            android:src="@drawable/ic_done_black_24dp"/>

    </RelativeLayout>
    </ScrollView>





</RelativeLayout>
